<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        layout="@layout/toolbar_normal"/>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/edittext_shadow"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.newindiaawards.utility.RoundedImageView
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:id="@+id/userImage"
                        android:src="@drawable/placeholder_user"
                        android:scaleType="centerCrop"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/userName"
                        android:textColor="@color/orange"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/userCategory"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/userEmail"
                        android:textColor="@color/semigray"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textStyle="italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/userPhone"
                        android:textColor="@color/orange"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:visibility="gone"
                        android:gravity="center|center_vertical"
                        android:id="@+id/likeCount"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/left_drawable"
                        android:layout_width="wrap_content"
                        android:text="Category name"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/voteme"
                        android:layout_gravity="center"
                        android:text="VOTE ME"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button"
                        android:layout_width="200dp"
                        android:layout_height="40dp" />

                </LinearLayout>



                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/about"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/semiblack"
                        android:text="About Us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                    <android.support.v7.widget.CardView
                        android:layout_below="@+id/about"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="4dp"
                        android:id="@+id/aboutLink"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="3dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/aboutData"
                                android:textColor="@color/semiblack"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageabout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/desc"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/semiblack"
                        android:text="Nominee Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <android.support.v7.widget.CardView
                        android:layout_below="@+id/desc"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="4dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="3dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/descDatat"
                                android:textColor="@color/semiblack"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageabout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/llimages"
                    android:background="@drawable/edittext_shadow"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/addpic"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:hint="Nominee Images"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:inputType="text"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2"
                        android:layout_height="70dp">
                        <RelativeLayout
                            android:id="@+id/image1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.newindiaawards.utility.RoundedImageView
                                android:id="@+id/imge1"
                                android:src="@drawable/icon_upload"
                                android:layout_width="50dp"
                                android:scaleType="centerInside"
                                android:layout_height="50dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.newindiaawards.utility.RoundedImageView
                                android:id="@+id/image2"
                                android:src="@drawable/icon_upload"
                                android:layout_width="50dp"
                                android:scaleType="fitXY"
                                android:layout_height="50dp" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2"
                        android:layout_height="70dp">
                        <RelativeLayout
                            android:id="@+id/industrialGood"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                            <com.newindiaawards.utility.RoundedImageView
                                android:id="@+id/image3"
                                android:src="@drawable/icon_upload"
                                android:layout_width="50dp"
                                android:scaleType="fitXY"
                                android:layout_height="50dp" />





                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/agroproduce"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">



                            <com.newindiaawards.utility.RoundedImageView
                                android:id="@+id/image4"
                                android:src="@drawable/icon_upload"
                                android:layout_width="50dp"
                                android:scaleType="fitXY"
                                android:layout_height="50dp" />




                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_height="70dp">

                        <com.newindiaawards.utility.RoundedImageView
                            android:id="@+id/image5"
                            android:src="@drawable/icon_upload"
                            android:layout_width="50dp"
                            android:scaleType="fitXY"
                            android:layout_height="50dp" />


                    </LinearLayout>





                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/llvideos"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/videotv"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/semiblack"
                        android:text="Nominee Video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <android.support.v7.widget.CardView
                        android:layout_below="@+id/videotv"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="4dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="3dp"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RelativeLayout
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvvideolink"
                                android:textColor="@color/semiblack"
                                android:layout_marginLeft="10dp"
                                android:textSize="16sp"
                                android:text="Click here to view video"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/imageabout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>





                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/lllinks"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/semiblack"
                        android:text="Social Links"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                        <LinearLayout
                            android:padding="15dp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgfb"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/facebook"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                            <ImageView
                                android:id="@+id/imgtwitter"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/twitter"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                            <ImageView
                                android:id="@+id/imggoogle"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/instagram"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />


                        </LinearLayout>


                </LinearLayout>






            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/vote"
        android:text="VOTE"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>